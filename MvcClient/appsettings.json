{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "DefaultScheme": "MyCookieAuthenticationScheme",
  "DefaultChallengeScheme": "oidc",
  "openIdConnectOptions": {
    "Authority": "https://localhost:44314/",
    "RequireHttpsMetadata": true,
    "ClientId": "MVCClient",
    "ClientSecret": "secret",
    "ResponseType": "code id_token",
    "SignInScheme": "MyCookieAuthenticationScheme",
    "SaveTokens": true,
    "GetClaimsFromUserInfoEndpoint": true,
    "Scope": [ "openid", "profile", "apiClient", "offline_access" ]
  },
  "ApiClientOption": {
    "ApiClientId": "apiClient",
    "ApiClientBaseAddress": "https://localhost:44355/"

  }

}
